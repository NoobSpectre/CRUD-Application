            </tr>
          </thead>
          <tbody>
            <%- include('partials/_index_tr') %>
          </tbody>
        </table>
      </form>
    </div>
  </main>
  <!-- /main section -->

  <script defer src="js/index.js"></script>
  
  <!-- include footer.ejs -->
  <%- include('partials/_footer') %>
