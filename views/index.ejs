  <!-- main section -->
  <main id="site-main">
    <div class="container">
      <div class="box-nav d-flex justify-between">
        <a href="/add-user" class="border-shadow">
          <span class="text-gradient">Add User<i class="fa-solid fa-user"></i></span>
        </a>
      </div>

      <!-- form handling -->
      <form action="/" method="POST">
        <table class="table">
          <thead class="thead-dark">
